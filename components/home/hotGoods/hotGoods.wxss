@import '../../../app.wxss';

.inner{
  padding-left: 20rpx;
  display: flex;
}
.inner .scroll-view-item{
  display: inline-block;
  width: 40%;
  padding: 10rpx
}

.inner .scroll-view-item .picture{
  width: 90%;
  height: 250rpx
}

.inner .scroll-view-item .picture image{
  width: 100%;
  height: 100%
}

.inner .scroll-view-item .goods_name{
  font-size: 32rpx;
}

.inner .scroll-view-item .goods_brief{
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0
}

.inner .scroll-view-item .goods_price{
  font-size: 28rpx;
  color: #c20c0c
}