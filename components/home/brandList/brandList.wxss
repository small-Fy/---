.brandList{
  display: flex;
  flex-wrap: wrap;
}

.brandList .brand_item{
  width: 46%;
  height: 280rpx;
  margin: 10rpx 2%;
  position: relative
}


.brandList .brand_item .background{
  width: 100%;
  height: 100%;
}

.brandList .brand_item .background image{
  width: 100%;
  height: 100%;
  border-radius: 6rpx
}

.brandList .brand_item .brand_name{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 32rpx
}

.brandList .brand_item .brand_price{
  position: absolute;
  top: 70rpx;
  left: 20rpx;
  font-size: 28rpx;
  color: #666
}