@import '../../lib/wxParse/wxParse.wxss';
@import '../../app.wxss';

swiper {
  height: 700rpx;
}

swiper .swiper-item {
  width: 100%;
  height: 500rpx;
}

swiper .swiper-item image {
  width: 100%;
  height: 100%;
}

.goodsDetail {
  background-color: #eee;
}

.goodsDetail .goods_introduce {
  height: 230rpx;
  background-color: white;
  margin-bottom: 10rpx;
  padding-top: 20rpx;
}

.goodsDetail .goods_introduce .goods_name {
  text-align: center;
  font-size: 36rpx;
  margin-top: 40rpx;
}

.goodsDetail .goods_introduce .goods_brief {
  text-align: center;
  font-size: 34rpx;
  margin: 14rpx 0 30rpx 0;
}

.goodsDetail .goods_introduce .goods_price {
  text-align: center;
  font-size: 34rpx;
  color: #c20c0c;
}

.goodsDetail .goods_parameter {
  background-color: white;
  padding: 30rpx 20rpx 0;
  margin-bottom: 10rpx;
}

.goodsDetail .goods_parameter .goods_title {
  font-size: 36rpx;
}

.goodsDetail .goods_parameter .attribute_item {
  display: flex;
  border-radius: 20rpx;
  background-color: #eee;
  margin-top: 20rpx;
  padding: 20rpx;
}

.goodsDetail .goods_parameter .attribute_item .attribute_name {
  font-size: 32rpx;
  color: #aaa;
  width: 20%;
  margin-right: 1%;
}

.goodsDetail .goods_parameter .attribute_item .attribute_value {
  font-size: 32rpx;
  width: 79%;
}

.goodsDetail .problem .problem_title {
  height: 60px;
  line-height: 60px;
  text-align: center;
}

.goodsDetail .problem .problem_title .line {
  display: inline-block;
  width: 70rpx;
  border-top: 2rpx solid #ccc;
  vertical-align: middle;
}

.goodsDetail .problem .problem_title .txt {
  vertical-align: middle;
  font-size: 40rpx
}

.goodsDetail .problem .goods_issue{
  margin-top: 40rpx;
  padding: 0 20rpx
}

.goodsDetail .problem .goods_issue .issue_item{
  font-size: 36rpx;
  padding: 20rpx 0
}

.goodsDetail .problem .goods_issue .issue_item .question{
  display: flex;
  align-items: center
}

.goodsDetail .problem .goods_issue .issue_item .question .point{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #c20c0c
}

.goodsDetail .problem .goods_issue .issue_item .question .text{
  margin-left: 6rpx
}

.goodsDetail .problem .goods_issue .issue_item .answer{
  color: #666;
  margin: 20rpx 0 0 30rpx
}

.goodsDetail .recommended .problem_title {
  height: 60px;
  line-height: 60px;
  text-align: center;
}

.goodsDetail .recommended .problem_title .line {
  display: inline-block;
  width: 70rpx;
  border-top: 2rpx solid #ccc;
  vertical-align: middle;
}

.goodsDetail .recommended .problem_title .txt {
  vertical-align: middle;
  font-size: 40rpx
}

.goodsDetail .recommended .goodsList{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 100rpx
}

.goodsDetail .recommended .goodsList .goods_item {
  width: 49%;
  height: 390rpx;
  background-color: white;
  margin-bottom: 10rpx
}

.goodsDetail .recommended .goodsList .goods_item .background {
  width: 100%;
  height: 250rpx;
}

.goodsDetail .recommended .goodsList .goods_item .background image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.goodsDetail .recommended .goodsList .goods_item .brand_name {
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx;
}

.goodsDetail .recommended .goodsList .goods_item .brand_price {
  text-align: center;
  font-size: 28rpx;
  color: #c20c0c;
}

.orderInfo{
  margin-top: 40rpx
}

.orderInfo .btn{
  width: 90%;
  margin: 0 auto
}
