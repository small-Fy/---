.me .userInfo {
  width: 100%;
  height: 220rpx;
  background-color: #c20c0c;
}

.me .userInfo .notLogin {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 40rpx;
}

.me .userInfo .notLogin .left {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}

.me .userInfo .notLogin .left .userPic {
  width: 150rpx;
  height: 150rpx;
}

.me .userInfo .notLogin .left .userPic image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.me .userInfo .notLogin .left .text {
  font-size: 38rpx;
  color: white;
  margin-left: 40rpx;
}

.me .userInfo .notLogin .right {
  margin-right: 40rpx;
}

.me .userInfo .notLogin .right button {
  border: 0;
  background-color: #c20c0c;
  outline: none;
  -webkit-appearance: none;
  padding: 0;
  width: 32rpx;
  line-height: 150rpx
}

.me .operation_list {
  display: flex;
  flex-wrap: wrap;
}

.me .operation_list .operation_item {
  width: 33%;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  padding: 20rpx 0;
}

.me .operation_list .border_type {
  border-bottom: 0;
}

.me .operation_list .operation_item .operation_icon {
  width: 25%;
  height: 60rpx;
  margin: 0 auto;
}

.me .operation_list .operation_item .operation_icon image {
  width: 100%;
  height: 100%;
}

.me .operation_list .operation_item .operation_name {
  text-align: center;
  font-size: 36rpx;
  margin: 20rpx 0;
}
