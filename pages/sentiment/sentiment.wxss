@import '../../app.wxss';

.sentiment {
  background-color: #eee;
}

.sentiment .pic_top {
  width: 100%;
  height: 320rpx;
}

.sentiment .pic_top image {
  width: 100%;
  height: 100%;
}

.sentiment .tab_bar {
  display: flex;
  justify-content: space-around;
  height: 80rpx;
  font-size: 36rpx;
  background-color: white;
  padding: 20rpx 0
}

.sentiment .tab_bar .font{
  color: #c20c0c;
  font-weight: 700
}

.sentiment .tab_bar .comprehensive {
  line-height: 80rpx;
}

.sentiment .tab_bar .classify {
  line-height: 80rpx;
}

.sentiment .tab_bar .price {
  display: flex;
  align-items: center
}

.sentiment .tab_bar .price .price_text{
  line-height: 80rpx;
}

.sentiment .tab_bar .price .sort{
  margin-left: 10rpx
}

.sentiment .tab_bar .price .sort .asc{
}

.sentiment .tab_bar .price .sort .desc{
}


.sentiment .goodsList{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 10rpx
}

.sentiment .goodsList .goods_item {
  width: 49%;
  height: 390rpx;
  background-color: white;
  margin-bottom: 10rpx
}

.sentiment .goodsList .goods_item .background {
  width: 100%;
  height: 250rpx;
}

.sentiment .goodsList .goods_item .background image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.sentiment .goodsList .goods_item .brand_name {
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx;
}

.sentiment .goodsList .goods_item .brand_price {
  text-align: center;
  font-size: 28rpx;
  color: #c20c0c;
}
